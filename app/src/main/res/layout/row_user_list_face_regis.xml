<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="@dimen/_4sdp"
    app:cardElevation="@dimen/_2sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_3sdp">


        <com.lavos.widgets.AppCustomTextView
            android:id="@+id/photo_reg_user_name_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_11sdp"
            android:layout_weight="1"
            android:gravity="center|start"
            android:textColor="@color/login_txt_color"
            android:textSize="@dimen/_11sdp" />

        <com.lavos.widgets.AppCustomTextView
            android:id="@+id/photo_reg_dd_name_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_11sdp"
            android:layout_weight="1"
            android:gravity="center|start"
            android:textColor="@color/login_txt_color"
            android:textSize="@dimen/_11sdp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_10sdp">

            <com.lavos.widgets.AppCustomTextView
                android:id="@+id/photo_reg_user_ph_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_registered_shop_call_select"
                android:gravity="center|start"
                android:textColor="@color/login_txt_color"
                android:textSize="@dimen/_11sdp" />

            <ImageView
                android:id="@+id/iv_aadhaar_ion"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_4sdp"
                android:contentDescription="@null"
                android:gravity="center"
                android:src="@drawable/ic_aadhaar_icon"
                android:textSize="@dimen/_11sdp" />

            <ImageView
                android:id="@+id/sync_image_view"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:gravity="center"
                android:src="@drawable/ic_dashboard_attendance_icon_deselect"
                android:textSize="@dimen/_11sdp"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_4sdp"/>

            <ImageView
                android:id="@+id/sync_whatsapp_iv"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_4sdp"
                android:contentDescription="@null"
                android:gravity="center"
                android:src="@drawable/ic_whatsapp"
                android:textSize="@dimen/_11sdp" />

            <ImageView
                android:id="@+id/sync_delete_iv"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_4sdp"
                android:contentDescription="@null"
                android:gravity="center"
                android:src="@drawable/ic_delete_black_24dp"
                android:textSize="@dimen/_11sdp"
                android:visibility="gone"/>


            <ImageView
                android:id="@+id/sync_delete_iv_red"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_17sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_4sdp"
                android:contentDescription="@null"
                android:gravity="center"
                android:src="@drawable/trash_red"
                android:textSize="@dimen/_11sdp" />

            <ImageView
                android:id="@+id/sync_status_iv"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_4sdp"
                android:contentDescription="@null"
                android:gravity="center"
                android:src="@drawable/ic_registered_shop_sync"
                android:textSize="@dimen/_11sdp" />

            <ImageView
                android:id="@+id/sync_status_failed_iv"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_17sdp"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:gravity="center"
                android:src="@drawable/ic_unsunc_face1"
                android:textSize="@dimen/_11sdp"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_4sdp"/>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:background="@color/light_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp">

            <com.lavos.widgets.AppCustomTextView
                android:id="@+id/click_for_photo_reg_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:gravity="end"
                android:paddingEnd="@dimen/_10sdp"
                android:text="Click for Registration"
                android:textColor="@color/blue"
                android:textSize="@dimen/_11sdp" />


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>